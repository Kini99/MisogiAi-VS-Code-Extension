{
  "name": "langgraph-ai-assistant",
  "displayName": "LangGraph AI Assistant",
  "description": "A VS Code extension that mimics Cursor IDE's AI assistant.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:langgraph-ai-assistant.start"
  ],
  "main": "./dist/extension.js",
  "extensionDependencies": [
    "ms-python.python"
  ],
  "contributes": {
    "commands": [
      {
        "command": "langgraph-ai-assistant.start",
        "title": "Start AI Assistant"
      },
      {
        "command": "langgraph-ai-assistant.setApiKey",
        "title": "Set AI Assistant API Key"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.mjs",
    "watch": "npm run build -- --watch",
    "compile": "tsc -p .",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "esbuild": "^0.19.11",
    "typescript": "^5.3.3"
  }
}
